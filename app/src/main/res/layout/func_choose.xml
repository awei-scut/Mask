<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_margin="10dp"
        android:layout_width="230dp"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.hanks.htextview.line.LineTextView
                android:padding="3dp"
                android:layout_margin="1.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:textStyle="bold"
                android:text="Vedio Transfer"
                android:textSize="16sp"
                app:animationDuration="1111"
                app:lineColor="#1367bc"
                app:lineWidth="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Choose this, you can transfer your vedio to another style" />

            <com.github.rubensousa.raiflatbutton.RaiflatButton
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_margin="4dp"
                android:width="120dp"
                android:id="@+id/transfer"
                android:text="Start" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_margin="10dp"
        android:layout_width="230dp"
        android:layout_height="150dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hanks.htextview.line.LineTextView
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="Vedio Face Change"
                android:padding="3dp"
                android:textSize="16sp"
                android:layout_gravity="center|top"
                app:animationDuration="1111"
                app:lineWidth="4dp"
                app:lineColor="#1367bc"
                />
            <TextView
                android:gravity="center"
                android:text="Choose this, you can change one face to the other in vedio"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <com.github.rubensousa.raiflatbutton.RaiflatButton
                android:width="120dp"
                android:layout_gravity="center|bottom"
                android:layout_margin="4dp"
                android:text="Start"
                android:id="@+id/changeface"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_margin="10dp"
        android:layout_width="230dp"
        android:layout_height="150dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hanks.htextview.line.LineTextView
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="change voice"
                android:padding="3dp"
                android:textSize="16sp"
                android:layout_gravity="center|top"
                app:animationDuration="1111"
                app:lineWidth="4dp"
                app:lineColor="#1367bc"
                />
            <TextView
                android:gravity="center"
                android:text="Choose this, you can change voice in the vedio"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <com.github.rubensousa.raiflatbutton.RaiflatButton
                android:width="120dp"
                android:layout_gravity="center|bottom"
                android:layout_margin="4dp"
                android:text="Start"
                android:id="@+id/changevoice"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
